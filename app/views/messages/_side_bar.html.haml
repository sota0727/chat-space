%body
  .side-ber
    .side-ber__user-name
      .top-items
        .top-items__name
          = current_user.name
        %ul.top-items__icons 
          %li.top-items__icons__edit
            = link_to new_group_path, class: "top-items__icons__btn" do
              = icon('fas', 'edit')
          %li.top-items__icons__cog
            = link_to edit_user_path(current_user), class: "top-items__icons__btn" do
              = icon('fas', 'cog')
    .side-ber__group-list
      - current_user.groups.each do |group|
        .Group
          = link_to group_messages_path(group), class: "Group__list"do
            .Group__name
              = group.name
            .Group__message
              = group.show_last_message


